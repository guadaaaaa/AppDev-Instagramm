                    android:layout_marginLeft="40dp"/>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/comment"
                    android:background="#FFF"
                    android:layout_marginLeft="360dp"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>